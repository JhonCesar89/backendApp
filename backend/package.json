{
  "name": "eduplatform-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "cd .. && npx prisma generate",
    "db:push": "cd .. && npx prisma db push",
    "db:migrate": "cd .. && npx prisma migrate deploy",
    "db:seed": "cd .. && npx tsx prisma/seed.ts",
    "db:studio": "cd .. && npx prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "prisma": "^5.7.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "tsx": "^4.6.2",
    "typescript": "^5.7.3"
  }
}
